<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/r"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context="com.thoriq.absensismea.Home">

    <LinearLayout
        android:id="@+id/li"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Data Hadir Siswa "
            android:textColor="@color/colorPrimary"
            android:textSize="25dp" />


    </LinearLayout>
    <TextView
        android:id="@+id/tv1"
        android:paddingLeft="16dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/li"
        android:background="#44000000"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar Siswa Belum Absen"/>
    <ListView
        android:id="@+id/list_belum"
        android:layout_below="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv2"
        android:paddingLeft="16dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/list_belum"
        android:background="#44000000"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar Siswa Sudah Absen"/>
    <ListView
        android:id="@+id/list_udah"
        android:layout_below="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
