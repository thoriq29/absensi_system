<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context="com.thoriq.absensismea.Home">
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:backgroundTint="#1B84C7"
        app:cardCornerRadius="6dp"
        android:layout_margin="10dp"
        android:layout_height="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:background="@drawable/ic_supervisor_account_black_24dp"
                android:backgroundTint="#fff"
                android:padding="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#fff"
                android:layout_marginRight="20dp"
                android:textSize="14dp"
                android:layout_marginTop="15dp"
                android:text="Total Siswa(Laki-Laki/Perempuan)"/>
            <ProgressBar
                android:id="@+id/pg"
                android:layout_width="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/tv1"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/tvTotalSiswa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textSize="30dp"
                android:textColor="#fff"
                android:text="0 (0/0)"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/tv1"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:layout_below="@+id/card1"
        android:layout_width="match_parent"
        android:backgroundTint="#22C6C7"
        app:cardCornerRadius="6dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:background="@drawable/ic_person_black_24dp"
                android:backgroundTint="#fff"
                android:padding="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#fff"
                android:layout_marginRight="20dp"
                android:textSize="14dp"
                android:layout_marginTop="15dp"
                android:text="Hadir Hari ini"/>
            <ProgressBar
                android:id="@+id/pg1"
                android:layout_width="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/tv2"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/tvTotalHadir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:textSize="30dp"
                android:textColor="#fff"
                android:text="1"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/tv2"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card3"
        android:layout_below="@+id/card2"
        android:layout_width="match_parent"
        android:backgroundTint="#F5B32C"
        app:cardCornerRadius="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:background="@drawable/ic_access_time_black_24dp"
                android:backgroundTint="#fff"
                android:padding="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#fff"
                android:layout_marginRight="20dp"
                android:textSize="14dp"
                android:layout_marginTop="15dp"
                android:text="Tidak Hadir Hari ini"/>
            <ProgressBar
                android:id="@+id/pg2"
                android:layout_width="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/tv3"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/tvTotalBelumHadir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textSize="30dp"
                android:textColor="#fff"
                android:text="1"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/tv3"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card4"
        android:layout_below="@+id/card3"
        android:layout_width="match_parent"
        android:backgroundTint="#EC5664"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="14dp"
                android:layout_marginTop="15dp"
                android:text="Persentase Kehadiran Hari ini"/>
            <ProgressBar
                android:id="@+id/pg3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/tv4"
                />
            <TextView
                android:id="@+id/tvPersen"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="#fff"
                android:text="1%"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/tv4"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
